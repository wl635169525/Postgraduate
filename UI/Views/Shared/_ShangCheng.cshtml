@using Models;
@using BLL;
<!DOCTYPE html>

<html>
<head>
    <title>资料市场</title>
    <!-- for-mobile-apps -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="keywords" content="Best Store Responsive web template, Bootstrap Web Templates, Flat Web Templates, Android Compatible web template,
Smartphone Compatible web template, free webdesigns for Nokia, Samsung, LG, SonyEricsson, Motorola web design" />
    <script type="application/x-javascript">
        addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false);
               function hideURLbar(){ window.scrollTo(0,1); } </script>
    <!-- //for-mobile-apps -->
    <link href="~/assets/css/bootstrap.css" rel="stylesheet" />
    <link href="~/assets/css/shangchengstyle.css" rel="stylesheet" />
    <!-- js -->
    <script src="~/assets/js/Sc/jquery.min.js"></script>
    <!-- //js -->
    <!-- cart -->
    <script src="~/assets/js/Sc/simpleCart.min.js"></script>
    <!-- cart -->
    <!-- for bootstrap working -->
    <script src="~/assets/js/Sc/bootstrap-3.1.1.min.js"></script>
    <!-- //for bootstrap working -->
    <link href='https://fonts.googleapis.com/css?family=Open+Sans:400,300,300italic,400italic,600,600italic,700,700italic,800,800italic' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Lato:400,100,100italic,300,300italic,400italic,700,700italic,900,900italic' rel='stylesheet' type='text/css'>
    <!-- timer -->
    <link href="~/assets/css/jquery.countdown.css" rel="stylesheet" />
    <!-- //timer -->
    <!-- animation-effect -->
    <script src="~/assets/js/Sc/wow.min.js"></script>
    <link href="~/assets/css/animate.min.css" rel="stylesheet" />
    <script>
 new WOW().init();
    </script>
    <!-- //animation-effect -->
  
</head>
<body>
    <div class="header">
        <div class="container">
            <div class="logo-nav">
                <div class="logo-nav-left animated wow zoomIn" data-wow-delay=".5s">
                    <h1>
                        <a href="@Url.Action("Index", "Index")">
                            <img src="~/assets/images/logo.png" />
                        </a>
                    </h1>
                </div>
                <div class="logo-nav-left1">
                    <nav class="navbar navbar-default">
                        <!-- Brand and toggle get grouped for better mobile display -->
                        <div class="navbar-header nav_2">                          
                        </div>
                    </nav>
                </div>
                <div class="logo-nav-right">
                    <div class="search-box">
                        <div id="sb-search" class="sb-search">
                            <form>
                                <input class="sb-search-input" placeholder="想要啥，就搜啥..." type="search" id="search">
                                <input class="sb-search-submit" type="submit" value="">
                                <span class="sb-icon-search"> </span>
                            </form>
                        </div>
                    </div>
                    <!-- search-scripts -->
                    <script src="~/assets/js/Sc/uisearch.js"></script>
                    <script src="~/assets/js/Sc/classie.js"></script>
                    <script>
								new UISearch( document.getElementById( 'sb-search' ) );
                    </script>
                    <!-- //search-scripts -->
                </div>              
                @*<div style="height:20px;width:20px;"></div>*@
                <div style="height:40px;width:70px;float:right;">
                    <div style="height:40px;width:20px;float:left"></div>
                    @{
                        UserInfoManager userinfoManager = new UserInfoManager();
                        if (Session["UserName"] != null)
                        {
                            UserInfo userinfo = userinfoManager.GetUsersByName(Session["UserName"].ToString());

                            if (userinfo.Photo != null)
                            {
                                <a href="@Url.Action("UserCenter","UserCenter",new {userid = userinfo.UserID})" target="_blank"><img src="/@userinfo.Photo" style="width:40px;height:40px;border-radius:50%;float:left" /></a>
                            }
                            else
                            {
                                <a href="@Url.Action("UserCenter","UserCenter",new {userid = userinfo.UserID})" target="_blank">
                                    <img src="~/images/photo.png" style="width:40px;height:40px;border-radius:50%;float:right" />
                                </a>
                            }

                        }
                    }
                </div>
                <div class="header-right">
                    <div class="cart box_1">
                        <a href="@Url.Action("ShoppingCart","ShangCheng")">
                            <h3>
                                <div class="total">
                                    <span class="simpleCart_total"></span>数量:<span id="simpleCart_quantity" class="simpleCart_quantity"></span>
                                </div>
                                <img src="/images/bag.png" alt="" />
                            </h3>
                        </a>
                        <p><a href="#" class="simpleCart_empty">清空购物车</a></p>
                        <div class="clearfix"> </div>
                    </div>
                </div>
                <div class="clearfix">
                </div>
                

            </div>
        </div>
    </div>
    <div>
        @RenderBody()
    </div>
</body>
</html>

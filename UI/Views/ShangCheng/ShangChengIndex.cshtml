@model UI.Models.ShangChengViewModels
@{
    ViewBag.Title = "ShangChengIndex";
    Layout = "~/Views/Shared/_ShangCheng.cshtml";
}
<!-- 大图展示 -->
<div class="banner">
    <div class="container">
        <div class="banner-info animated wow zoomIn" data-wow-delay=".5s">
            <h3>淘出你的考研梦</h3>
            <h4>折扣<span>高达-<i>50%</i></span></h4>
            <div class="wmuSlider example1">
                <div class="wmuSliderWrapper">
                    <article style="position: absolute; width: 100%; opacity: 0;">
                        <div class="banner-wrap">
                            <div class="banner-info1">
                                <p>省钱 + 省心 + 省力 +保障</p>
                            </div>
                        </div>
                    </article>
                    <article style="position: absolute; width: 100%; opacity: 0;">
                        <div class="banner-wrap">
                            <div class="banner-info1">
                                <p>文具 + 真题 + 资料 + 课程</p>
                            </div>
                        </div>
                    </article>
                    <article style="position: absolute; width: 100%; opacity: 0;">
                        <div class="banner-wrap">
                            <div class="banner-info1">
                                <p>便宜 + 实惠 & 品质 + 便捷</p>
                            </div>
                        </div>
                    </article>
                </div>
            </div>
            <script src="~/assets/js/Sc/jquery.wmuSlider.js"></script>
            <script>
						$('.example1').wmuSlider();
            </script>
        </div>
    </div>
</div>

<!-- 浮出小图片-->
<div class="banner-bottom">
    <div class="container">
        <div class="banner-bottom-grids">
            <div class="banner-bottom-grid-left animated wow slideInLeft" data-wow-delay=".5s">
                <div class="grid">
                    <figure class="effect-julia">
                        <img src="~/images/WJ.jpg" width="360" height="412" alt="" class="img-responsive" />
                        <figcaption>
                            <h3>资料<span>市场</span><i>淘你所需，圆你的考研梦</i></h3>
                            <div>
                                <p>我卖的都是你所需要的</p>
                                <p>我买的都是你想卖的</p>
                                <p>资料互换，诚信交易</p>
                            </div>
                        </figcaption>
                    </figure>
                </div>
            </div>
            <div class="banner-bottom-grid-left1 animated wow slideInUp" data-wow-delay=".5s">
                <div class="banner-bottom-grid-left-grid left1-grid grid-left-grid1">
                    <div class="banner-bottom-grid-left-grid1">
                        <img src="~/images/SCI.jpg" alt="" height="200" class="img-responsive" />
                    </div>
                    <div class="banner-bottom-grid-left1-pos">
                        <p>折扣高达50%</p>
                    </div>
                </div>
                <div class="banner-bottom-grid-left-grid left1-grid grid-left-grid1">
                    <div class="banner-bottom-grid-left-grid1">
                        <img src="~/images/SCI1.jpg" height="200" alt="" class="img-responsive" />
                    </div>
                    <div class="banner-bottom-grid-left1-position">
                        <div class="banner-bottom-grid-left1-pos1">
                            <p>学霸笔记便宜出</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="banner-bottom-grid-right animated wow slideInRight" data-wow-delay=".5s">
                <div class="banner-bottom-grid-left-grid grid-left-grid1">
                    <div class="banner-bottom-grid-left-grid1">
                        <img src="~/images/SB.jpg" width="360" height="412" alt="" class="img-responsive" />
                    </div>
                    <div class="grid-left-grid1-pos">
                        <p>考研英语真题 <span>2019最新版</span></p>
                    </div>
                </div>
            </div>
            <div class="clearfix"> </div>
        </div>
    </div>
</div>

<!-- 商品展示 -->
<div class="new-collections">
    <div class="container">
        <h3 class="animated wow zoomIn" data-wow-delay=".5s">最新商品</h3>
        <p class="est animated wow zoomIn" data-wow-delay=".5s">
            站在巨人的肩膀上，你才能走的更高，看的更远，买了学霸的复习资料和重点，你才能考的更好！
        </p>
        <div class="new-collections-grids">
            @foreach (var goods in Model.Goods1)
            {
                <div class="col-md-3 new-collections-grid">
                    <div class="new-collections-grid1 animated wow slideInUp" data-wow-delay=".5s">
                        <div class="new-collections-grid1-image">
                            <a href="@Url.Action("ShangChengDetails","ShangCheng", new {goodsid = goods.GoodsID})" class="product-image"><img src="/@goods.GoodsPhoto" alt="" class="img-responsive" /></a>
                            <div class="new-collections-grid1-image-pos">
                                <a href="@Url.Action("ShangChengDetails","ShangCheng", new {goodsid = goods.GoodsID})">商品详情</a>
                            </div>
                            <div class="new-collections-grid1-right">
                                <div class="rating">
                                    <div class="rating-left">
                                        <img src="~/images/xinxin1.png" alt="" class="img-responsive" />
                                    </div>
                                    <div class="rating-left">
                                        <img src="~/images/xinxin1.png" alt="" class="img-responsive" />
                                    </div>
                                    <div class="rating-left">
                                        <img src="~/images/xinxin1.png" alt="" class="img-responsive" />
                                    </div>
                                    <div class="rating-left">
                                        <img src="/images/xinxin1.png" alt="" class="img-responsive" />
                                    </div>
                                    <div class="rating-left">
                                        <img src="/images/xinxin.png" alt="" class="img-responsive" />
                                    </div>
                                    <div class="clearfix"> </div>
                                </div>
                            </div>
                        </div>
                        <h4><a href="@Url.Action("ShangChengDetails","ShangCheng", new {goodsid = goods.GoodsID})">@goods.GoodsName</a></h4>
                        <p>本商品解释权最终归雁升网所有</p>
                        <div class="new-collections-grid1-left simpleCart_shelfItem">
                            <p><i>$@goods.SubPrice</i> <span class="item_price">@goods.Price</span><a class="item_add" href="@Url.Action("ShangChengDetails","ShangCheng", new {goodsid = goods.GoodsID})">加入购物车 </a></p>
                        </div>
                    </div>
                    <div class="clearfix"> </div>
                </div>
            }
        </div>
    </div>
</div>



